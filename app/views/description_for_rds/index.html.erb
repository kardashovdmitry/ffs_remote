<h1>Список приборов</h1>

  <td><a class='btn-primary'><%= link_to 'Добавить прибор', new_description_for_rd_path %></a></td>
<td><%= link_to 'Скачать отчет', "/devices.pdf" %></td></br></br></br>

<table class="table table-striped table-condensed">
  <tr>
    <th>Name</th>
    <th>Value</th>
    <th>RDID</th>
  </tr>

  <% @descriptionForRds.each do |device| %>
    <tr>
      <td><%= device.name %></td>
      <td><%= device.value %></td>


      <td><%= link_to 'Показать', description_for_rd_path(device) %></td>
      <td><%= link_to 'Изменить', edit_description_for_rd_path(device) %></td>
      <td><%= link_to 'Удалить', description_for_rd_path(device),
              method: :delete,
              data: { confirm: 'Вы уверены?' } %></td>
   </tr>
  <% end %>
</table>
