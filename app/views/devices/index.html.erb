<h1>Список приборов</h1>

  <td><a class='btn-primary'><%= link_to 'Добавить прибор', new_device_path %></a></td>
<td><%= link_to 'Скачать отчет', "/devices.pdf" %></td></br></br></br>

<table class="table table-striped table-condensed">
  <tr>
    <th>Name</th>
    <th>Manufacturer</th>
    <th>Model</th>
    <th>Description</th>

  </tr>

  <% @devices.each do |device| %>
    <tr>
      <td><%= device.name %></td>
      <td><%= device.manufacturer %></td>
      <td><%= device.model %></td>
      <td><%= device.description %></td>
      <td><%= link_to 'Показать', device_path(device) %></td>
      <td><%= link_to 'Изменить', edit_device_path(device) %></td>
      <td><%= link_to 'Удалить', device_path(device),
              method: :delete,
              data: { confirm: 'Вы уверены?' } %></td>
   </tr>
  <% end %>
</table>
